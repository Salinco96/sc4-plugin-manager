{
  "extends": "./tsconfig.json",
  "include": [
    "electron.vite.config.*",
    "src/common/**/*",
    "src/config/**/*.json",
    "src/main/**/*",
    "src/node/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["electron-vite/node"],
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@node/*": ["src/node/*"],
      "@utils/*": ["src/main/utils/*"]
    }
  }
}
