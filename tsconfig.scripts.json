{
  "extends": "./tsconfig.json",
  "include": [
    "src/common/**/*",
    "src/config/**/*.json",
    "src/node/**/*",
    "src/scripts/**/*",
    "types/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "types": ["node"],
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@node/*": ["src/node/*"]
    }
  }
}
